<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             xmlns:viewModels="clr-namespace:AnimeViewer.ViewModels;assembly=AnimeViewer"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:partials="clr-namespace:AnimeViewer.Views.Partials;assembly=AnimeViewer"
             xmlns:controls="clr-namespace:AnimeViewer.Controls;assembly=AnimeViewer"
             xmlns:transformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
             x:Class="AnimeViewer.Views.AllAnimeCollectionPage"
             x:Name="Page"
             Title="All Anime">
    <StackLayout>
        <!-- These are the notification views, for example the Establishing Connection notification -->
        <!-- Notification that shows when the animemanager is establishing a connection with the api -->
        <ContentView IsVisible="{Binding IsInitializing}">
            <partials:BannerView Text="Establishing Connection">
                <partials:BannerView.CustomView>
                    <ActivityIndicator IsRunning="True" />
                </partials:BannerView.CustomView>
            </partials:BannerView>
        </ContentView>
        <!-- Notification that shows when the animemanager is caching animes on the device -->
        <ContentView IsVisible="{Binding IsCachingAnimes}">
            <partials:BannerView Text="Caching Animes">
                <partials:BannerView.CustomView>
                    <StackLayout>
                        <ActivityIndicator IsRunning="True" />
                        <Label FontSize="Small"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               HorizontalTextAlignment="Center"
                               Text="Please be patient. This takes a while." />
                    </StackLayout>
                </partials:BannerView.CustomView>
            </partials:BannerView>
        </ContentView>
        <!-- Notification that shows when there are connection issue(s) and if tapped, retries connecting -->
        <ContentView IsVisible="{Binding HasConnectionIssue}">
            <partials:BannerView Text="Connection to host failed.&#10;Tap to retry connection">
                <partials:BannerView.GestureRecognizers>
                    <TapGestureRecognizer NumberOfTapsRequired="1"
                                          Tapped="HasConnectionIssueFrame_Tapped" />
                </partials:BannerView.GestureRecognizers>
            </partials:BannerView>
        </ContentView>
        <!-- The searchbar -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <SearchBar Placeholder="Search..."
                       BackgroundColor="Transparent"
                       TextChanged="SearchBar_OnTextChanged"
                       SearchButtonPressed="SearchBar_OnSearchButtonPressed"
                       x:Name="SearchBar"
                       Grid.Column="0">
                <SearchBar.TextColor>
                    <OnPlatform x:TypeArguments="Color"
                                iOS="Black"
                                Android="White" />
                </SearchBar.TextColor>
                <SearchBar.PlaceholderColor>
                    <OnPlatform x:TypeArguments="Color"
                                Android="Gray" />
                </SearchBar.PlaceholderColor>
            </SearchBar>
            <ffimageloading:CachedImage HeightRequest="25"
                                        WidthRequest="25"
                                        Aspect="Fill"
                                        Source="arrow_disclosure.png"
                                        x:Name="SearchBarDisclosureImage"
                                        Margin="5, 5, 15, 5"
                                        Grid.Column="1">
                <ffimageloading:CachedImage.GestureRecognizers>
                    <TapGestureRecognizer Tapped="SearchBarDisclosureImage_Tapped" />
                </ffimageloading:CachedImage.GestureRecognizers>
                <ffimageloading:CachedImage.Transformations>
                    <transformations:RotateTransformation Degrees="90" />
                </ffimageloading:CachedImage.Transformations>
            </ffimageloading:CachedImage>
        </Grid>
        <!-- Using grids to create advanced search overlay -->
        <Grid VerticalOptions="FillAndExpand"
              HorizontalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- The animes to show in a collectionview format -->
            <flv:FlowListView FlowColumnMinWidth="110"
                              RowHeight="190"
                              FlowItemsSource="{Binding VisibleAnimes}"
                              FlowItemTapped="FlowListView_OnFlowItemTapped"
                              Grid.Row="0">
                <flv:FlowListView.FlowColumnTemplate>
                    <DataTemplate>
                        <Grid Padding="5"
                              WidthRequest="110"
                              HorizontalOptions="Center"
                              VerticalOptions="CenterAndExpand">
                            <!-- The poster image of an anime -->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="7*" />
                                <RowDefinition Height="2*" />
                            </Grid.RowDefinitions>
                            <!-- Gray color when no poster image is loaded -->
                            <ContentView BackgroundColor="Gray"
                                         Grid.Row="0" />
                            <!-- The poster image -->
                            <ffimageloading:CachedImage Aspect="Fill"
                                                        Source="{Binding ImageUrl}"
                                                        HeightRequest="125"
                                                        HorizontalOptions="FillAndExpand"
                                                        CacheType="Disk"
                                                        RetryCount="3"
                                                        RetryDelay="500"
                                                        VerticalOptions="FillAndExpand"
                                                        Grid.Row="0">
                                <ffimageloading:CachedImage.Transformations>
                                    <transformations:RoundedTransformation Radius="5" />
                                </ffimageloading:CachedImage.Transformations>
                            </ffimageloading:CachedImage>
                            <!-- Subbed and dubbed indicators -->
                            <controls:ContentViewRoundedCorners HeightRequest="10"
                                                                Margin="3"
                                                                CornerRadius="3"
                                                                Padding="3"
                                                                HorizontalOptions="Start"
                                                                VerticalOptions="Start"
                                                                BackgroundColor="Orange"
                                                                IsVisible="False"
                                                                Grid.Row="0">
                                <Label Text="Sub"
                                       FontSize="Micro"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       HorizontalTextAlignment="Center"
                                       VerticalTextAlignment="Center" />
                                <ContentView.Triggers>
                                    <DataTrigger TargetType="ContentView"
                                                 Binding="{Binding Language}"
                                                 Value="JapaneseSub">
                                        <Setter Property="IsVisible"
                                                Value="True" />
                                    </DataTrigger>
                                </ContentView.Triggers>
                            </controls:ContentViewRoundedCorners>

                            <controls:ContentViewRoundedCorners HeightRequest="10"
                                                                Margin="3"
                                                                CornerRadius="3"
                                                                Padding="3"
                                                                HorizontalOptions="Start"
                                                                VerticalOptions="Start"
                                                                BackgroundColor="Blue"
                                                                IsVisible="False"
                                                                Grid.Row="0">
                                <Label Text="Dub"
                                       FontSize="Micro"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       HorizontalTextAlignment="Center"
                                       VerticalTextAlignment="Center" />
                                <ContentView.Triggers>
                                    <DataTrigger TargetType="ContentView"
                                                 Binding="{Binding Language}"
                                                 Value="EnglishDub">
                                        <Setter Property="IsVisible"
                                                Value="True" />
                                    </DataTrigger>
                                </ContentView.Triggers>
                            </controls:ContentViewRoundedCorners>

                            <!-- Label color background (to indicate popular and hot animes -->
                            <controls:ContentViewRoundedCorners BackgroundColor="Black"
                                                                Grid.Row="1"
                                                                CornerRadius="5"
                                                                Opacity="0.8" />
                            <controls:ContentViewRoundedCorners BackgroundColor="Red"
                                                                IsVisible="{Binding IsHot}"
                                                                Grid.Row="1"
                                                                CornerRadius="5"
                                                                Opacity="0.8" />
                            <controls:ContentViewRoundedCorners BackgroundColor="Blue"
                                                                IsVisible="{Binding JustUpdated}"
                                                                Grid.Row="1"
                                                                CornerRadius="5"
                                                                Opacity="0.8" />
                            <Label x:Name="Label"
                                   HorizontalOptions="Fill"
                                   HorizontalTextAlignment="Center"
                                   VerticalOptions="FillAndExpand"
                                   TextColor="White"
                                   Text="{Binding Name}"
                                   VerticalTextAlignment="Center"
                                   LineBreakMode="WordWrap"
                                   FontSize="Small"
                                   Grid.Row="1" />
                        </Grid>
                    </DataTemplate>
                </flv:FlowListView.FlowColumnTemplate>
            </flv:FlowListView>
            <ContentView x:Name="AdvancedSearchOptionsView"
                         Opacity="0"
                         IsVisible="False"
                         BackgroundColor="Transparent"
                         Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <ContentView Opacity="0.95"
                                 BackgroundColor="#111111"
                                 Grid.Row="0" />
                    <StackLayout Grid.Row="0">
                        <TableView Intent="Settings"
                                   HasUnevenRows="True"
                                   BackgroundColor="Transparent">
                            <TableRoot>
                                <TableSection Title="Language">
                                    <ViewCell Height="60">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Label Text="Show All"
                                                   TextColor="White"
                                                   VerticalOptions="Center"
                                                   Margin="15,0"
                                                   Grid.Column="0" />
                                            <Switch Grid.Column="1"
                                                    VerticalOptions="Center"
                                                    IsToggled="True" />
                                        </Grid>
                                    </ViewCell>
                                    <ViewCell Height="60">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Label Text="Subbed"
                                                   TextColor="White"
                                                   VerticalOptions="Center"
                                                   Margin="15,0"
                                                   Grid.Column="0" />
                                            <Switch Grid.Column="1"
                                                    VerticalOptions="Center"
                                                    IsToggled="False" />
                                        </Grid>
                                    </ViewCell>
                                    <ViewCell Height="60">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Label Text="Dubbed"
                                                   TextColor="White"
                                                   VerticalOptions="Center"
                                                   Margin="15,0"
                                                   Grid.Column="0" />
                                            <Switch Grid.Column="1"
                                                    VerticalOptions="Center"
                                                    IsToggled="False" />
                                        </Grid>
                                    </ViewCell>
                                </TableSection>
                            </TableRoot>
                        </TableView>
                    </StackLayout>
                </Grid>
            </ContentView>
        </Grid>
        <!-- The activity indicator that shows when the app is busy -->
        <!--<ActivityIndicator IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}" />-->
    </StackLayout>
</ContentPage>
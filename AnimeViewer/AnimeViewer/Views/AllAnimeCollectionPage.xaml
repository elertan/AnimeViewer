<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:flv="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.FlowListView"
             xmlns:viewModels="clr-namespace:AnimeViewer.ViewModels;assembly=AnimeViewer"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             x:Class="AnimeViewer.Views.AllAnimeCollectionPage"
             x:Name="Page"
             Title="All Anime">
    <StackLayout>
        <Frame HasShadow="True"
               Padding="10"
               BackgroundColor="Transparent"
               OutlineColor="Black"
               IsVisible="{Binding IsCachingAnimes}">
            <StackLayout>
                <ProgressBar Progress="{Binding CachingAnimeProgress}" />
                <Label Text="{Binding CachingAnimeText}"
                       TextColor="White"
                       VerticalOptions="Center"
                       VerticalTextAlignment="Center"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center" />
            </StackLayout>
        </Frame>
        <Frame HasShadow="True"
               Padding="10"
               BackgroundColor="Transparent"
               IsVisible="{Binding HasConnectionIssue}"
               OutlineColor="Black">
            <Frame.GestureRecognizers>
                <TapGestureRecognizer NumberOfTapsRequired="1"
                                      Tapped="HasConnectionIssueFrame_Tapped" />
            </Frame.GestureRecognizers>
            <Label Text="Connection to host failed.&#10;Tap to retry connection"
                   VerticalOptions="Center"
                   TextColor="White"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />
        </Frame>
        <SearchBar Placeholder="Search..."
                   BackgroundColor="Transparent"
                   TextChanged="SearchBar_OnTextChanged"
                   x:Name="SearchBar">
            <SearchBar.TextColor>
                <OnPlatform x:TypeArguments="Color"
                            iOS="Black"
                            Android="White" />
            </SearchBar.TextColor>
        </SearchBar>
        <flv:FlowListView FlowColumnMinWidth="125"
                          RowHeight="175"
                          FlowItemsSource="{Binding VisibleAnimes}"
                          FlowItemTapped="FlowListView_OnFlowItemTapped"
                          IsPullToRefreshEnabled="False"
                          Refreshing="ListView_OnRefreshing"
                          IsRefreshing="{Binding IsBusy}"
                          IsVisible="{Binding IsNotBusy}">
            <flv:FlowListView.GestureRecognizers>
                <TapGestureRecognizer Tapped="FlowListView_OnTapped" />
            </flv:FlowListView.GestureRecognizers>
            <flv:FlowListView.FlowColumnTemplate>
                <DataTemplate>
                    <Grid Padding="5">
                        <ffimageloading:CachedImage Aspect="Fill"
                                                    Source="{Binding PosterImageUrl}"
                                                    HorizontalOptions="FillAndExpand"
                                                    CacheType="Disk"
                                                    VerticalOptions="FillAndExpand" />
                        <ContentView BackgroundColor="Black"
                                     Opacity="0.8"
                                     VerticalOptions="End"
                                     BindingContext="{x:Reference Label}"
                                     HeightRequest="{Binding Path=Height}" />
                        <Label x:Name="Label"
                               HorizontalOptions="Fill"
                               HorizontalTextAlignment="Center"
                               VerticalOptions="End"
                               TextColor="White"
                               Text="{Binding Name}" />
                    </Grid>
                </DataTemplate>
            </flv:FlowListView.FlowColumnTemplate>
        </flv:FlowListView>
        <ActivityIndicator IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}" />
    </StackLayout>
</ContentPage>